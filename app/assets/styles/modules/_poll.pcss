.poll{
  padding: 5rem 10rem;
  &__container{
    display: flex;
    flex-direction: column;
    width: 38rem;
    margin: 0 auto;
    
  }
  &__poll-section{
    background-image: linear-gradient(45deg, $mainColor, $secondBlue);
    height: 60vh;
    border-radius: 1rem;
  }
  &__btn-container{
    display: flex;
  }
}